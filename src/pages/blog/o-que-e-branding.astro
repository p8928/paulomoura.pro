const post = {
  data: {
    title: "Branding: você provavelmente está fazendo errado",
    description: "A intersecção entre branding e experiência do cliente na construção de relacionamentos duradouros.",
    publishDate: new Date('2025-11-05'),
    tags: ["Branding", "Experiência do Cliente", "SEO"],
    author: "Paulo Moura",
    image: {
      url: "/img/thumbs/002_branding_2560x800.webp", // Replace with actual image
