---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/nav/Navigation.astro';
import AboutDesktop_01 from '../components/sections/16_about/about_sections/AboutDesktop_01.astro';
import AboutDesktop_02 from '../components/sections/16_about/about_sections/AboutDesktop_02.astro';
import AboutDesktop_03 from '../components/sections/16_about/about_sections/AboutDesktop_03.astro';
import AboutDesktop_04 from '../components/sections/16_about/about_sections/AboutDesktop_04.astro';
import AboutDesktop_05 from '../components/sections/16_about/about_sections/AboutDesktop_05.astro';
import AboutDesktop_06 from '../components/sections/16_about/about_sections/AboutDesktop_06.astro';
import AboutDesktop_07 from '../components/sections/16_about/about_sections/AboutDesktop_07.astro';
import AboutDesktop_08 from '../components/sections/16_about/about_sections/AboutDesktop_08.astro';
import AboutDesktop_09 from '../components/sections/16_about/about_sections/AboutDesktop_09.astro';
import AboutMobile_01 from '../components/sections/16_about/about_sections/AboutMobile_01.astro';
import AboutMobile_02 from '../components/sections/16_about/about_sections/AboutMobile_02.astro';
import AboutMobile_03 from '../components/sections/16_about/about_sections/AboutMobile_03.astro';
import AboutMobile_04 from '../components/sections/16_about/about_sections/AboutMobile_04.astro';
import AboutMobile_05 from '../components/sections/16_about/about_sections/AboutMobile_05.astro';
import AboutMobile_06 from '../components/sections/16_about/about_sections/AboutMobile_06.astro';
import AboutMobile_07 from '../components/sections/16_about/about_sections/AboutMobile_07.astro';
import AboutMobile_08 from '../components/sections/16_about/about_sections/AboutMobile_08.astro';
import AboutMobile_09 from '../components/sections/16_about/about_sections/AboutMobile_09.astro';
import Footer from '../components/footer/Footer.astro';
---

<Layout title="Sobre | MOURA">
  <!-- Desktop content with slots -->
  <Navigation slot="nav" class="desktop-content" />
  <AboutDesktop_01 slot="hero" class="desktop-content" />
  <AboutDesktop_02 slot="snap-content" class="desktop-content" />
  <AboutDesktop_03 slot="snap-content" class="desktop-content" />
  <AboutDesktop_04 slot="snap-content" class="desktop-content" />
  <AboutDesktop_05 slot="snap-content" class="desktop-content" />
  <AboutDesktop_06 slot="snap-content" class="desktop-content" />
  <AboutDesktop_07 slot="snap-content" class="desktop-content" />
  <AboutDesktop_08 slot="snap-content" class="desktop-content" />
  <AboutDesktop_09 slot="snap-content" class="desktop-content" />
  <Footer slot="rest-content" class="desktop-content" />

  <!-- Mobile content without slots (would render in document order) -->
  <div class="mobile-content">
    <Navigation />
    <AboutMobile_01 />
    <AboutMobile_02 />
    <AboutMobile_03 />
    <AboutMobile_04 />
    <AboutMobile_05 />
    <AboutMobile_06 />
    <AboutMobile_07 />
    <AboutMobile_08 />
    <AboutMobile_09 />
    <Footer />
  </div>
</Layout>

<style>
  .mobile-content {
    display: none;
  }
  
  @media (max-width: 768px) {
    .desktop-content {
      display: none;
    }
    .mobile-content {
      display: block;
    }
  }
</style>