---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/blog/BlogCard.astro';
import Sidebar from '../components/blog/Sidebar.astro';
import Navigation from '../components/nav/Navigation.astro';
import Footer from '../components/footer/Footer.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return true;
});

// Sort posts by date
const sortedPosts = allPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---
<Layout title="Blog - Moura | Marketing e Comunicação Digital">
  <Navigation slot="nav" />
  <div slot="rest-content" class="blog-page">
    <section class="blog-hero">
      <div class="hero-content">
        <h1 class="full-screen-title" id="blog-title">
          <span class="title-part">BRAND</span>
          <span class="title-dash-container">
            <span class="title-dash"></span>
          </span>
          <span class="title-part">LED</span>
          <span class="title-blog">BLOG</span>
        </h1>
      </div>
    </section>
    
    <div class="blog-main-content">
      <main class="blog-posts">
        <div class="blog-grid" id="blog-grid">
          {sortedPosts.map(post => <BlogCard entry={post} />)}
        </div>
      </main>
      <Sidebar class="sidebar" />
    </div>
  </div>
  <Footer slot="rest-content" />
</Layout>

<style>
.blog-page {
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: var(--color-background);
}

.blog-hero {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: var(--color-background);
  position: relative;
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
}

.full-screen-title {
  font-family: var(--font-family-heading);
  font-size: clamp(3rem, 8vw, 6rem);
  font-weight: var(--font-weight-light);
  color: var(--color-text-primary);
  letter-spacing: var(--letter-spacing-tight);
  margin: 0;
  line-height: 1.1;
  text-transform: uppercase;
}

#blog-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.title-part {
  display: inline-block;
  line-height: 1;
  opacity: 0;
  transform: translateY(150px);
}

.title-blog {
  display: inline-block;
  margin-left: 0.5rem;
  line-height: 1;
  opacity: 0;
  transform: translateY(150px);
}

.title-dash-container {
  display: flex;
  align-items: center;
  height: 1em;
  margin: 0 var(--space-xs);
  opacity: 0;
}

.title-dash {
  width: clamp(2rem, 6vw, 4rem);
  height: 0.08em;
  background-color: var(--color-accent);
  opacity: 0;
  transform: scaleX(0);
  transform-origin: center;
}

.blog-main-content {
  display: grid;
  grid-template-columns: minmax(0, 1200px) minmax(280px, 320px);
  gap: 2rem;
  padding: 2rem;
  width: 100%;
  max-width: 1500px;
  margin: 0 auto;
}

.blog-posts {
  width: 100%;
}

.sidebar {
  grid-column: 2;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

@media (max-width: 1200px) {
  .blog-main-content {
    grid-template-columns: 1fr 280px;
  }
}

@media (max-width: 992px) {
  .blog-main-content {
    grid-template-columns: 1fr;
  }
  .sidebar {
    grid-column: 1;
    order: 2;
    margin-top: 2rem;
  }
}

@media (min-width: 1201px) {
  .blog-grid {
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  }
}

@media (max-width: 768px) {
  .blog-hero {
    padding: var(--space-2xl) var(--space-md);
  }
  
  .full-screen-title {
    font-size: 6rem;
  }
}

@media (max-width: 480px) {
  .full-screen-title {
    font-size: 4rem;
  }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Check if GSAP is available
    if (typeof gsap !== 'undefined') {
      // Wait for a bit to ensure elements are rendered
      setTimeout(() => {
        // Animate the main title with stagger effect
        gsap.to(".title-part", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          stagger: 0.3,
          ease: "power3.out",
          delay: 0.2
        });
        
        // Animate the dash with a scale effect
        gsap.to(".title-dash-container", {
          duration: 1,
          opacity: 1,
          ease: "power2.out",
          delay: 0.7
        });
        
        gsap.to(".title-dash", 
          { 
            scaleX: 1, 
            opacity: 1, 
            duration: 0.8, 
            ease: "power3.inOut",
            delay: 0.7
          }
        );
        
        // Animate the "BLOG" with a different effect
        gsap.to(".title-blog", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          ease: "back.out(1.7)",
          delay: 1
        });
      }, 100); // Small delay to ensure DOM is ready
    } else {
      console.warn('GSAP not available');
      // Simple fallback animation using CSS classes
      setTimeout(() => {
        document.querySelectorAll('.title-part').forEach((part, index) => {
          setTimeout(() => {
            part.style.opacity = '1';
            part.style.transform = 'translateY(0)';
          }, 300 * index);
        });
        
        setTimeout(() => {
          document.querySelector('.title-dash-container').style.opacity = '1';
          const dash = document.querySelector('.title-dash');
          dash.style.transform = 'scaleX(1)';
          dash.style.opacity = '1';
        }, 600);
        
        setTimeout(() => {
          document.querySelector('.title-blog').style.opacity = '1';
          document.querySelector('.title-blog').style.transform = 'translateY(0)';
        }, 900);
      }, 100);
    }
  });
</script>
