---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/blog/BlogCard.astro';
import Navigation from '../components/nav/Navigation.astro';
import Footer from '../components/footer/Footer.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  // Filter out draft posts if you have them
  // return data.draft !== true;
  return true;
});

// Sort posts by date
const sortedPosts = allPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---
<Layout title="Blog - Moura | Marketing e Comunicação Digital">
  <Navigation slot="nav" />
  <div slot="rest-content" class="blog-page">
    <section class="blog-hero">
      <div class="hero-content">
        <h1 class="full-screen-title" id="blog-title">
          <span class="title-part">BRAND</span>
          <span class="title-dash-container">
            <span class="title-dash"></span>
          </span>
          <span class="title-part">LED</span>
          <span class="title-blog">BLOG</span>
        </h1>
      </div>
    </section>
    
    <div class="blog-content">
      <div class="search-container">
        <input
          type="text"
          placeholder="Buscar no blog..."
          class="search-input"
          id="search-input"
        />
      </div>
      
      <div class="blog-grid" id="blog-grid">
        {sortedPosts.map(post => <BlogCard entry={post} />)}
      </div>
    </div>
  </div>
  <Footer slot="rest-content" />
</Layout>

<style>
.blog-page {
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: var(--color-background);
}

.blog-hero {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: var(--color-background);
  position: relative;
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
}

.full-screen-title {
  font-family: var(--font-family-heading);
  font-size: clamp(3rem, 8vw, 6rem);
  font-weight: var(--font-weight-light);
  color: var(--color-text-primary);
  letter-spacing: var(--letter-spacing-tight);
  margin: 0;
  line-height: 1.1;
  text-transform: uppercase;
}

/* Title styling */
#blog-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.title-part {
  display: inline-block;
  line-height: 1;
  opacity: 0;
  transform: translateY(150px);
}

.title-blog {
  display: inline-block;
  margin-left: 0.5rem;
  line-height: 1;
  opacity: 0;
  transform: translateY(150px);
}

.title-dash-container {
  display: flex;
  align-items: center;
  height: 1em;
  margin: 0 var(--space-xs);
  opacity: 0;
}

.title-dash {
  width: clamp(2rem, 6vw, 4rem);
  height: 0.08em;
  background-color: var(--color-accent);
  opacity: 0;
  transform: scaleX(0);
  transform-origin: center;
}

.blog-content {
  padding: 2rem 2rem;
  max-width: 1000px;
  margin: 0 auto;
  background-color: var(--color-background);
}

.search-container {
  width: 100%;
  max-width: 500px;
  margin: 0 auto 2rem;
  position: relative;
}

.search-input {
  width: 100%;
  padding: 0.6rem 1rem;
  border: 1px solid var(--color-border);
  border-radius: 4px;
  font-size: 0.9rem;
  background-color: var(--color-background);
  color: var(--color-text-primary);
  transition: border-color 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--color-accent);
  box-shadow: 0 0 0 2px rgba(192, 178, 131, 0.2);
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
  padding: 0 1rem;
}

@media (max-width: 1200px) {
  .full-screen-title {
    font-size: 10rem;
  }
}

@media (min-width: 1201px) {
  .blog-grid {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }
}

@media (max-width: 768px) {
  .blog-hero {
    padding: var(--space-2xl) var(--space-md);
  }
  
  .full-screen-title {
    font-size: 6rem;
  }
}

@media (max-width: 480px) {
  .full-screen-title {
    font-size: 4rem;
  }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Check if GSAP is available
    if (typeof gsap !== 'undefined') {
      // Wait for a bit to ensure elements are rendered
      setTimeout(() => {
        // Animate the main title with stagger effect
        gsap.to(".title-part", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          stagger: 0.3,
          ease: "power3.out",
          delay: 0.2
        });
        
        // Animate the dash with a scale effect
        gsap.to(".title-dash-container", {
          duration: 1,
          opacity: 1,
          ease: "power2.out",
          delay: 0.7
        });
        
        gsap.to(".title-dash", 
          { 
            scaleX: 1, 
            opacity: 1, 
            duration: 0.8, 
            ease: "power3.inOut",
            delay: 0.7
          }
        );
        
        // Animate the "BLOG" with a different effect
        gsap.to(".title-blog", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          ease: "back.out(1.7)",
          delay: 1
        });
      }, 100); // Small delay to ensure DOM is ready
    } else {
      console.warn('GSAP not available');
      // Simple fallback animation using CSS classes
      setTimeout(() => {
        document.querySelectorAll('.title-part').forEach((part, index) => {
          setTimeout(() => {
            part.style.opacity = '1';
            part.style.transform = 'translateY(0)';
          }, 300 * index);
        });
        
        setTimeout(() => {
          document.querySelector('.title-dash-container').style.opacity = '1';
          const dash = document.querySelector('.title-dash');
          dash.style.transform = 'scaleX(1)';
          dash.style.opacity = '1';
        }, 600);
        
        setTimeout(() => {
          document.querySelector('.title-blog').style.opacity = '1';
          document.querySelector('.title-blog').style.transform = 'translateY(0)';
        }, 900);
      }, 100);
    }
  });
</script>
