<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Load more functionality
    const loadMoreButton = document.getElementById('load-more-button');
    const loadMoreContainer = document.getElementById('load-more-container');
    
    // Search functionality
    const searchInput = document.getElementById('search-input-main');
    const blogGrid = document.getElementById('blog-grid');
    const searchResultsInfo = document.getElementById('search-results-info');
    const searchQueryDisplay = document.getElementById('search-query-display');
    const searchResultsCount = document.getElementById('search-results-count');
    
    if (searchInput) {
      let searchTimeout;
      
      searchInput.addEventListener('input', (e) => {
        // Clear the previous timeout
        clearTimeout(searchTimeout);

        // Set a new timeout to delay the search
        searchTimeout = setTimeout(() => {
          const query = e.target.value.trim();

          if (query.length === 0) {
            // If search is empty, show all posts again
            showAllPosts();
            return;
          }

          if (query.length < 2) {
            // Don't search if query is too short
            return;
          }

          try {
            // Show loading state
            blogGrid.innerHTML = '<div class="search-loading">Buscando...</div>';

            const filteredPosts = window.allBlogPosts.filter(post => {
              const title = post.title ? post.title.toLowerCase() : '';
              const description = post.description ? post.description.toLowerCase() : '';
              const tags = post.tags ? post.tags.map(tag => tag.toLowerCase()) : [];

              const searchQuery = query.toLowerCase();

              return (
                title.includes(searchQuery) ||
                description.includes(searchQuery) ||
                tags.some(tag => tag.includes(searchQuery))
              );
            });

            // Sort posts by date (newest first)
            const sortedFilteredPosts = filteredPosts.sort((a, b) =>
              new Date(b.publishDate) - new Date(a.publishDate)
            );

            // Display search results
            displaySearchResults(sortedFilteredPosts, query, sortedFilteredPosts.length);
          } catch (error) {
            console.error('Error searching posts:', error);
            blogGrid.innerHTML = '<div class="search-error">Erro ao buscar posts. Tente novamente.</div>';
          }
        }, 500); // Delay the search by 500ms to avoid too many requests
      });

      function displaySearchResults(posts, query, total) {
        // Clear the main blog grid
        blogGrid.innerHTML = '';

        // Update search results info
        searchQueryDisplay.textContent = query;
        searchResultsCount.textContent = `Foram encontrados ${total} resultados`;
        searchResultsInfo.style.display = 'block';

        // Hide the load more button when showing search results
        if (loadMoreButton && loadMoreContainer) {
          loadMoreButton.style.display = 'none';
        }

        if (posts.length === 0) {
          blogGrid.innerHTML = '<div class="no-results">Nenhum resultado encontrado.</div>';
          return;
        }

        // Find a reference blog card to get the Astro CID for styling
        const referenceCard = document.querySelector('.blog-card');
        const astroCid = referenceCard ? referenceCard.getAttribute('class').split(' ').map(cn => referenceCard.getAttributeNames().find(attr => attr.startsWith('data-astro-cid-'))).filter(Boolean)[0] : null;
        
        // Create blog cards for search results
        posts.forEach(post => {
          const formattedDate = new Date(post.publishDate).toLocaleDateString('pt-BR', { 
            day: '2-digit', 
            month: '2-digit', 
            year: 'numeric' 
          });
          
          // Generate placeholder image URL
          const placeholderImage = post.image && post.image.url 
            ? post.image.url 
            : `https://placehold.co/600x400/ccc/969696?text=${encodeURIComponent(post.tags[0])}`;
          const placeholderAlt = post.image && post.image.alt 
            ? post.image.alt 
            : `Imagem para o artigo: ${post.title}`;
          
          const blogCard = document.createElement('a');
          blogCard.href = `/blog/${post.slug}/`;
          blogCard.className = 'blog-card';
          
          // Apply the Astro CID attribute for proper styling
          if (astroCid) {
            blogCard.setAttribute(astroCid, '');
          }
          
          blogCard.innerHTML = `
            <div class="blog-thumb">
              <img 
                src="${placeholderImage}" 
                alt="${placeholderAlt}"
                class="blog-thumb-img"
                loading="lazy"
              />
            </div>
            <div class="blog-content-inner">
              <div class="blog-meta">
                <span class="blog-date">${formattedDate}</span>
                <span class="blog-category">${post.tags[0]}</span>
              </div>
              <h3 class="blog-title">${post.title}</h3>
              <p class="blog-excerpt">${post.description}</p>
              <div class="blog-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </div>
            </div>
          `;
          
          // For nested elements, we also need to add the Astro CID
          const nestedElements = blogCard.querySelectorAll('.blog-thumb, .blog-thumb-img, .blog-content-inner, .blog-meta, .blog-date, .blog-category, .blog-title, .blog-excerpt, .blog-arrow');
          nestedElements.forEach(element => {
            if (astroCid) {
              element.setAttribute(astroCid, '');
            }
          });
          
          blogGrid.appendChild(blogCard);
        });
      }
      
      function showAllPosts() {
        // Reset the search results info
        searchResultsInfo.style.display = 'none';
        
        // Show the load more button again
        if (loadMoreButton && loadMoreContainer) {
          loadMoreButton.style.display = 'block';
        }
        
        // Reload the initial posts
        location.reload();
      }
    }
    
    if (loadMoreButton) {
      let currentIndex = 6; // Start after initial 6 posts
      
      loadMoreButton.addEventListener('click', async () => {
        try {
          // Show loading state
          loadMoreButton.textContent = 'Carregando...';
          loadMoreButton.disabled = true;
          
          // Fetch next 6 posts as data
          const response = await fetch(`/api/blog-posts-html?start=${currentIndex}&limit=6`);
          const data = await response.json();
          
          if (data.posts && data.posts.length > 0) {
            // Append new posts to the grid
            const blogGrid = document.getElementById('blog-grid');
            
            // Find a reference blog card to get the Astro CID for styling
            const referenceCard = document.querySelector('.blog-card');
            const astroCid = referenceCard ? referenceCard.getAttributeNames().find(attr => attr.startsWith('data-astro-cid-')) : null;
            
            data.posts.forEach(post => {
              const formattedDate = new Date(post.publishDate).toLocaleDateString('pt-BR', { 
                day: '2-digit', 
                month: '2-digit', 
                year: 'numeric' 
              });
              
              // Generate placeholder image URL
              const placeholderImage = post.image && post.image.url 
                ? post.image.url 
                : `https://placehold.co/600x400/ccc/969696?text=${encodeURIComponent(post.tags[0])}`;
              const placeholderAlt = post.image && post.image.alt 
                ? post.image.alt 
                : `Imagem para o artigo: ${post.title}`;
              
              const blogCard = document.createElement('a');
              blogCard.href = `/blog/${post.slug}/`;
              blogCard.className = 'blog-card';
              
              // Apply the Astro CID attribute for proper styling
              if (astroCid) {
                blogCard.setAttribute(astroCid, '');
              }
              
              blogCard.innerHTML = `
                <div class="blog-thumb">
                  <img 
                    src="${placeholderImage}" 
                    alt="${placeholderAlt}"
                    class="blog-thumb-img"
                    loading="lazy"
                  />
                </div>
                <div class="blog-content-inner">
                  <div class="blog-meta">
                    <span class="blog-date">${formattedDate}</span>
                    <span class="blog-category">${post.tags[0]}</span>
                  </div>
                  <h3 class="blog-title">${post.title}</h3>
                  <p class="blog-excerpt">${post.description}</p>
                  <div class="blog-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </div>
                </div>
              `;
              
              // For nested elements, we also need to add the Astro CID
              const nestedElements = blogCard.querySelectorAll('.blog-thumb, .blog-thumb-img, .blog-content-inner, .blog-meta, .blog-date, .blog-category, .blog-title, .blog-excerpt, .blog-arrow');
              nestedElements.forEach(element => {
                if (astroCid) {
                  element.setAttribute(astroCid, '');
                }
              });
              
              blogGrid.appendChild(blogCard);
            });
            
            // Update index
            currentIndex += data.posts.length;
            
            // Hide button if no more posts
            if (currentIndex >= data.total) {
              loadMoreButton.style.display = 'none';
            } else {
              // Reset button text and enable
              loadMoreButton.textContent = 'Carregar mais';
              loadMoreButton.disabled = false;
            }
          } else {
            // No more posts, hide button
            loadMoreButton.style.display = 'none';
          }
        } catch (error) {
          console.error('Error loading more posts:', error);
          // Reset button in case of error
          loadMoreButton.textContent = 'Erro ao carregar. Tentar novamente?';
          loadMoreButton.disabled = false;
        }
      });
    }
  });
</script>
