  font-weight: 400;
  color: var(--color-text-tertiary);
}

.blog-category {
  background: rgba(192, 178, 131, 0.1);
  color: var(--color-accent);
  padding: 0.2rem 0.6rem;
  border-radius: 12px;
  font-size: 0.65rem;
  text-transform: uppercase;
  letter-spacing: 1.2px;
  font-weight: 300;
  transition: all 0.3s ease;
}

.blog-title {
  font-size: 1.15rem;
  margin: 0 0 0.75rem 0;
  color: var(--color-text-primary);
  flex-grow: 1;
  line-height: 1.4;
}

.blog-excerpt {
  color: var(--color-text-secondary);
  margin-bottom: 1rem;
  line-height: 1.5;
  flex-grow: 1;
  font-size: 0.9rem;
}

.blog-arrow {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: auto;
  padding-top: 0.5rem;
  color: var(--color-accent);
  transition: all 0.3s ease;
}

.blog-arrow svg {
  width: 20px;
  height: 20px;
  stroke-width: 1.5;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.blog-card:hover .blog-arrow svg {
  transform: translateX(6px);
}

.blog-card:hover .blog-title {
  color: var(--color-accent);
}

.blog-card:hover .text-thumb {
  color: var(--color-accent);
}
</style>

<script is:inline type="module">
  // Ensure DOM is ready before initializing animations
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeBlogAnimations);
  } else {
    initializeBlogAnimations();
  }

  async function initializeBlogAnimations() {
    try {
      // Import GSAP dynamically
      const gsapModule = await import('https://esm.sh/gsap@3.13.0');
      const gsap = gsapModule.default || gsapModule;
      
      // Wait a bit more to ensure all elements are rendered properly
      setTimeout(() => {
        // Set initial state for all elements first
        gsap.set(".title-part", { y: 150, opacity: 0 });
        gsap.set(".title-dash-container", { opacity: 0 });
        gsap.set(".title-dash", { scaleX: 0, opacity: 0 });
        gsap.set(".title-blog", { y: 150, opacity: 0 });

        // Animate the main title with stagger effect
        gsap.to(".title-part", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          stagger: 0.3,
          ease: "power3.out",
          delay: 0.2
        });
        
        // Animate the dash with a scale effect
        gsap.to(".title-dash-container", {
          duration: 1,
          opacity: 1,
          ease: "power2.out",
          delay: 0.7
        });
        
        gsap.to(".title-dash", 
          { 
            scaleX: 1, 
            opacity: 1, 
            duration: 0.8, 
            ease: "power3.inOut",
            delay: 0.7
          }
        );
        
        // Animate the "BLOG" with a different effect
        gsap.to(".title-blog", {
          duration: 1.2,
          y: 0,
          opacity: 1,
          ease: "back.out(1.7)",
          delay: 1
        });
      }, 150); // Slightly longer delay to ensure DOM is ready
      
    } catch (err) {
      console.warn('GSAP could not be loaded. Using fallback animations.', err);
      // Simple fallback animation using CSS classes
      setTimeout(() => {
        document.querySelectorAll('.title-part').forEach((part, index) => {
          setTimeout(() => {
            part.style.opacity = '1';
            part.style.transform = 'translateY(0)';
            part.style.transition = 'opacity 1.2s ease, transform 1.2s ease';
          }, 300 * index);
        });
        
        setTimeout(() => {
          const dashContainer = document.querySelector('.title-dash-container');
          const dash = document.querySelector('.title-dash');
          
          if (dashContainer) {
            dashContainer.style.opacity = '1';
            dashContainer.style.transition = 'opacity 1s ease';
          }
          
          if (dash) {
            dash.style.transform = 'scaleX(1)';
            dash.style.opacity = '1';
            dash.style.transition = 'transform 0.8s ease, opacity 0.8s ease';
          }
        }, 600);
        
        setTimeout(() => {
          const blogTitle = document.querySelector('.title-blog');
          if (blogTitle) {
            blogTitle.style.opacity = '1';
            blogTitle.style.transform = 'translateY(0)';
            blogTitle.style.transition = 'opacity 1.2s ease, transform 1.2s ease';
          }
        }, 900);
      }, 150);
    }
  }
</script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Load more functionality
    const loadMoreButton = document.getElementById('load-more-button');
    const loadMoreContainer = document.getElementById('load-more-container');
    
    // Search functionality
    const searchInput = document.getElementById('search-input-main');
    const blogGrid = document.getElementById('blog-grid');
    const searchResultsInfo = document.getElementById('search-results-info');
    const searchQueryDisplay = document.getElementById('search-query-display');
    const searchResultsCount = document.getElementById('search-results-count');
    
    if (searchInput) {
      let searchTimeout;
      
      searchInput.addEventListener('input', (e) => {
        // Clear the previous timeout
        clearTimeout(searchTimeout);
        
        // Set a new timeout to delay the search
        searchTimeout = setTimeout(async () => {
          const query = e.target.value.trim();
          
          if (query.length === 0) {
            // If search is empty, show all posts again
            showAllPosts();
            return;
          }
          
          if (query.length < 2) {
            // Don't search if query is too short
            return;
          }
          
          try {
            // Show loading state
            blogGrid.innerHTML = '<div class="search-loading">Buscando...</div>';
            
            // Fetch search results
            const response = await fetch(`/api/search-posts?q=${encodeURIComponent(query)}&limit=12`);
            const data = await response.json();
            
            if (data.posts) {
              displaySearchResults(data.posts, data.query, data.total);
            } else {
              blogGrid.innerHTML = '<div class="no-results">Nenhum resultado encontrado.</div>';
            }
          } catch (error) {
            console.error('Error searching posts:', error);
            blogGrid.innerHTML = '<div class="search-error">Erro ao buscar posts. Tente novamente.</div>';
          }
        }, 500); // Delay the search by 500ms to avoid too many requests
      });
      
      function displaySearchResults(posts, query, total) {
        // Clear the main blog grid
        blogGrid.innerHTML = '';
        
        // Update search results info
        searchQueryDisplay.textContent = query;
        searchResultsCount.textContent = `Foram encontrados ${total} resultados`;
        searchResultsInfo.style.display = 'block';
        
        // Hide the load more button when showing search results
        if (loadMoreButton && loadMoreContainer) {
          loadMoreButton.style.display = 'none';
        }
        
        if (posts.length === 0) {
          blogGrid.innerHTML = '<div class="no-results">Nenhum resultado encontrado.</div>';
          return;
        }
        
        // Find a reference blog card to get the Astro CID for styling
        const referenceCard = document.querySelector('.blog-card');
        const astroCid = referenceCard ? referenceCard.getAttributeNames().find(attr => attr.startsWith('data-astro-cid-')) : null;
        
        // Create blog cards for search results
        posts.forEach(post => {
          const formattedDate = new Date(post.publishDate).toLocaleDateString('pt-BR', { 
            day: '2-digit', 
            month: '2-digit', 
            year: 'numeric' 
          });
          
          // Generate placeholder image URL
          const placeholderImage = post.image && post.image.url 
            ? post.image.url 
            : `https://placehold.co/600x400/ccc/969696?text=${encodeURIComponent(post.tags[0])}`;
          const placeholderAlt = post.image && post.image.alt 
            ? post.image.alt 
            : `Imagem para o artigo: ${post.title}`;
          
          const blogCard = document.createElement('a');
          blogCard.href = `/blog/${post.slug}/`;
          blogCard.className = 'blog-card';
          
          // Apply the Astro CID attribute for proper styling
          if (astroCid) {
            blogCard.setAttribute(astroCid, '');
          }
          
          blogCard.innerHTML = `
            <div class="blog-thumb">
              <img 
                src="${placeholderImage}" 
                alt="${placeholderAlt}"
                class="blog-thumb-img"
                loading="lazy"
              />
            </div>
            <div class="blog-content-inner">
              <div class="blog-meta">
                <span class="blog-date">${formattedDate}</span>
                <span class="blog-category">${post.tags[0]}</span>
              </div>
              <h3 class="blog-title">${post.title}</h3>
              <p class="blog-excerpt">${post.description}</p>
              <div class="blog-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </div>
            </div>
          `;
          
          // For nested elements, we also need to add the Astro CID
          const nestedElements = blogCard.querySelectorAll('.blog-thumb, .blog-thumb-img, .blog-content-inner, .blog-meta, .blog-date, .blog-category, .blog-title, .blog-excerpt, .blog-arrow');
          nestedElements.forEach(element => {
            if (astroCid) {
              element.setAttribute(astroCid, '');
            }
          });
          
          blogGrid.appendChild(blogCard);
        });
      }
      
      function showAllPosts() {
        // Reset the search results info
        searchResultsInfo.style.display = 'none';
        
        // Show the load more button again
        if (loadMoreButton && loadMoreContainer) {
          loadMoreButton.style.display = 'block';
        }
        
        // Reload the initial posts
        location.reload();
      }
    }
    
    if (loadMoreButton) {
      let currentIndex = 6; // Start after initial 6 posts
      
      loadMoreButton.addEventListener('click', async () => {
        try {
          // Show loading state
          loadMoreButton.textContent = 'Carregando...';
          loadMoreButton.disabled = true;
          
          // Fetch next 6 posts as data
          const response = await fetch(`/api/blog-posts-html?start=${currentIndex}&limit=6`);
          const data = await response.json();
          
          if (data.posts && data.posts.length > 0) {
            // Append new posts to the grid
            const blogGrid = document.getElementById('blog-grid');
            
            // Find a reference blog card to get the Astro CID for styling
            const referenceCard = document.querySelector('.blog-card');
            const astroCid = referenceCard ? referenceCard.getAttributeNames().find(attr => attr.startsWith('data-astro-cid-')) : null;
            
            data.posts.forEach(post => {
              const formattedDate = new Date(post.publishDate).toLocaleDateString('pt-BR', { 
                day: '2-digit', 
                month: '2-digit', 
                year: 'numeric' 
              });
              
              // Generate placeholder image URL
              const placeholderImage = post.image && post.image.url 
                ? post.image.url 
                : `https://placehold.co/600x400/ccc/969696?text=${encodeURIComponent(post.tags[0])}`;
              const placeholderAlt = post.image && post.image.alt 
                ? post.image.alt 
                : `Imagem para o artigo: ${post.title}`;
              
              const blogCard = document.createElement('a');
              blogCard.href = `/blog/${post.slug}/`;
              blogCard.className = 'blog-card';
              
              // Apply the Astro CID attribute for proper styling
              if (astroCid) {
                blogCard.setAttribute(astroCid, '');
              }
              
              blogCard.innerHTML = `
                <div class="blog-thumb">
                  <img 
                    src="${placeholderImage}" 
                    alt="${placeholderAlt}"
                    class="blog-thumb-img"
                    loading="lazy"
                  />
                </div>
                <div class="blog-content-inner">
                  <div class="blog-meta">
                    <span class="blog-date">${formattedDate}</span>
                    <span class="blog-category">${post.tags[0]}</span>
                  </div>
                  <h3 class="blog-title">${post.title}</h3>
                  <p class="blog-excerpt">${post.description}</p>
                  <div class="blog-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </div>
                </div>
              `;
              
              // For nested elements, we also need to add the Astro CID
              const nestedElements = blogCard.querySelectorAll('.blog-thumb, .blog-thumb-img, .blog-content-inner, .blog-meta, .blog-date, .blog-category, .blog-title, .blog-excerpt, .blog-arrow');
              nestedElements.forEach(element => {
                if (astroCid) {
                  element.setAttribute(astroCid, '');
                }
              });
              
              blogGrid.appendChild(blogCard);
            });
            
            // Update index
            currentIndex += data.posts.length;
            
            // Hide button if no more posts
            if (currentIndex >= data.total) {
              loadMoreButton.style.display = 'none';
            } else {
              // Reset button text and enable
              loadMoreButton.textContent = 'Carregar mais';
              loadMoreButton.disabled = false;
            }
          } else {
            // No more posts, hide button
            loadMoreButton.style.display = 'none';
          }
        } catch (error) {
          console.error('Error loading more posts:', error);
          // Reset button in case of error
          loadMoreButton.textContent = 'Erro ao carregar. Tentar novamente?';
          loadMoreButton.disabled = false;
        }
      });
    }
  });
</script>
