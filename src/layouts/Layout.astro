---
const { title = "Moura | Marketing e Comunicação Digital" } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Moura " />
    <!-- Favicon padrão -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
    
    <!-- Favicon SVG para temas claro/escuro -->
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" id="favicon">
    
    <!-- Favicon em diferentes tamanhos para dispositivos -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16-platinum.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32-platinum.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon/favicon-48x48.png">
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon/favicon-64x64.png">
    <link rel="icon" type="image/png" sizes="128x128" href="/favicon/favicon-128x128.png">
    
    <!-- Apple Touch Icons para dispositivos iOS -->
    <link rel="apple-touch-icon" sizes="57x57" href="/favicon/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/favicon/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/favicon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/favicon/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/favicon/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/favicon/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/favicon/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/favicon/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon-platinum.png">
    
    <!-- Android e outros dispositivos -->
    <link rel="manifest" href="/manifest.json">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="Moura">
    <meta name="application-name" content="Moura">
    
    <script>
      // Função para detectar o modo do sistema e atualizar a favicon
      function setFaviconBasedOnSystem() {
        // Verifica se o objeto matchMedia existe para evitar erros
        if (window.matchMedia) {
          const isDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const favicon = document.getElementById('favicon');

          if (favicon) {
            if (isDarkMode) {
              // Modo escuro - usar favicon com design claro
              favicon.href = '/favicon-dark.svg';
            } else {
              // Modo claro - usar favicon com design escuro
              favicon.href = '/favicon-light.svg';
            }
          }
        }
      }

      // Chamar na carga da página e quando o tema muda
      if (window.matchMedia) {
        setFaviconBasedOnSystem();
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', setFaviconBasedOnSystem);
      }
    </script>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#2D2D2D">
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/fonts/outfit-v14-latin/style.css" />
    
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <!-- GSAP and ScrollTrigger loaded conditionally in individual components to avoid window property errors -->
  </head>
  <body>
    <main id="main-content">
      <slot name="nav" />
      <slot name="hero" />
      <slot name="snap-content" />
      <div class="rest-content-wrapper">
        <slot name="rest-content" />
      </div>
    </main>
    
    <slot name="overlay" />

    <script>
      // Ensure HTMX is properly initialized
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof htmx !== 'undefined') {
          // Process any HTMX elements that might not have been processed
          htmx.process(document.body);
        }
      });
    </script>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        const animatedElements = document.querySelectorAll('.animate-on-scroll');

        if (!animatedElements.length) return;

        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1 // Triggers when 10% of the element is visible
        });

        animatedElements.forEach(element => {
          observer.observe(element);
        });
      });
    </script>
  </body>
</html>