---
const { title = "Moura | Marketing e Comunicação Digital" } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Moura " />
    <!-- Favicon padrão -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
    
    <!-- Favicon SVG para temas claro/escuro -->
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" id="favicon">
    
    <!-- Favicon em diferentes tamanhos para dispositivos -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16-platinum.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32-platinum.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon/favicon-48x48.png">
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon/favicon-64x64.png">
    <link rel="icon" type="image/png" sizes="128x128" href="/favicon/favicon-128x128.png">
    
    <!-- Apple Touch Icons para dispositivos iOS -->
    <link rel="apple-touch-icon" sizes="57x57" href="/favicon/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/favicon/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/favicon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/favicon/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/favicon/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/favicon/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/favicon/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/favicon/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon-platinum.png">
    
    <!-- Preload Key Fonts -->
    <link rel="preload" href="/fonts/outfit-v14-latin/outfit-v14-latin-100.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/outfit-v14-latin/outfit-v14-latin-300.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/outfit-v14-latin/outfit-v14-latin-500.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/outfit-v14-latin/outfit-v14-latin-600.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Android e outros dispositivos -->
    <link rel="manifest" href="/manifest.json">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="Moura">
    <meta name="application-name" content="Moura">
    
    <script>
      // Função para detectar o modo do sistema e atualizar a favicon
      function setFaviconBasedOnSystem() {
        // Verifica se o objeto matchMedia existe para evitar erros
        if (window.matchMedia) {
          const isDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const favicon = document.getElementById('favicon');

          if (favicon) {
            if (isDarkMode) {
              // Modo escuro - usar favicon com design claro
              favicon.href = '/favicon-dark.svg';
            } else {
              // Modo claro - usar favicon com design escuro
              favicon.href = '/favicon-light.svg';
            }
          }
        }
      }

      // Chamar na carga da página e quando o tema muda
      if (window.matchMedia) {
        setFaviconBasedOnSystem();
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', setFaviconBasedOnSystem);
      }
    </script>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#2D2D2D">
    
    <!-- Preconnect to external origins to improve performance -->
    <link rel="preconnect" href="https://unpkg.com">
    
    <!-- Inline critical CSS to prevent render blocking -->
    <style is:global>
      /* CSS Reset & Base Styles - Critical for initial render */
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 16px;
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        font-family: var(--font-family-primary);
        line-height: 1.6;
        color: #000000;
        background: #ffffff;
        overflow-x: hidden;
        scrollbar-width: thin;
        scrollbar-color: #000000 rgba(0, 0, 0, 0.05);
      }

      /* CSS Custom Properties (Design Tokens) - Critical if used in initial render */
      :root {
        --color-primary: hsl(0, 0%, 0%);
        --color-secondary: hsl(0, 0%, 20%);
        --color-tertiary: hsl(0, 0%, 40%);
        --color-background: hsl(0, 0%, 100%);
        --color-text-primary: hwb(0 0% 100%);
        --color-text-secondary: #333333;
        --color-text-tertiary: hsl(0, 0%, 40%);
        --color-border: hsla(0, 0%, 0%, 0.1);
        --color-shadow: hsla(0, 0%, 0%, 0.05);
        --color-accent: hsl(45, 33%, 63%);
        --color-accent-accessible: hsl(45, 37%, 46%);
        --color-white: hsl(0, 0%, 100%);
        --color-light-gray: hsl(0, 0%, 72%);
        --color-dark-gray: hsl(0, 0%, 18%);
        --color-medium-gray: hsl(0, 0%, 42%);
        --font-family-primary: 'Outfit', 'Helvetica Neue', -apple-system, BlinkMacSystemFont, sans-serif;
        --font-family-heading: 'Outfit', 'Neue Haas Grotesk', sans-serif;
        --font-weight-light: 300;
        --font-weight-regular: 400;
        --font-weight-medium: 500;
        --font-weight-semibold: 600;
        --font-weight-bold: 700;
        --font-weight-black: 900;
        --font-size-xs: 0.75rem;
        --font-size-sm: 0.875rem;
        --font-size-base: 1rem;
        --font-size-lg: 1.125rem;
        --font-size-xl: 1.25rem;
        --font-size-2xl: 1.5rem;
        --font-size-3xl: 1.875rem;
        --font-size-4xl: 2.25rem;
        --font-size-5xl: 3rem;
        --font-size-hero: clamp(8rem, 15vw, 18rem);
        --line-height-tight: 1.25;
        --line-height-normal: 1.5;
        --line-height-relaxed: 1.75;
        --letter-spacing-tight: -0.02em;
        --letter-spacing-normal: 0;
        --letter-spacing-wide: 0.05em;
        --letter-spacing-wider: 0.1em;
        --space-xs: 0.5rem;
        --space-sm: 0.75rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;
        --space-3xl: 4rem;
        --space-4xl: 6rem;
        --space-5xl: 8rem;
        --radius-sm: 2px;
        --radius-md: 4px;
        --radius-lg: 8px;
        --radius-xl: 12px;
        --radius-2xl: 16px;
        --radius-full: 9999px;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
        --shadow-hover: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
        --shadow-inset: inset 0 0 0 5px var(--color-accent);
        --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
        --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
        --z-dropdown: 1000;
        --z-sticky: 1020;
        --z-fixed: 1030;
        --z-modal-backdrop: 1040;
        --z-modal: 1050;
        --z-popover: 1060;
        --z-tooltip: 1070;
        --size-icon-sm: 24px;
        --size-icon-md: 32px;
        --size-icon-lg: 50px;
        --size-control-xs: 40px;
        --size-max-height: 500px;
        --transform-translateY-5px: translateY(-5px);
        --transform-translateY-20px: translateY(20px);
        --transform-translateX-10px: translateX(10px);
        --transform-translateX-neg-10px: translateX(-10px);
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-family-heading);
        font-weight: var(--font-weight-light);
        line-height: var(--line-height-tight);
        color: var(--color-text-primary);
        margin: 0 0 var(--space-md) 0;
        letter-spacing: var(--letter-spacing-tight);
      }

      /* Focus styles for accessibility - Critical for accessibility */
      *:focus {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
      }

      *:focus:not(:focus-visible) {
        outline: none;
      }

      *:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
      }
    </style>

    <!-- Load non-critical CSS asynchronously to prevent render blocking -->
    <script>
      // Function to load CSS asynchronously
      function loadCSS(href) {
        var link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = href;
        document.head.appendChild(link);
      }
      
      // Load CSS files after critical content is rendered
      if ('requestIdleCallback' in window) {
        requestIdleCallback(function() {
          loadCSS('/styles/global.css');
          loadCSS('/fonts/outfit-v14-latin/style.css');
        });
      } else {
        // Fallback for browsers that don't support requestIdleCallback
        window.addEventListener('load', function() {
          loadCSS('/styles/global.css');
          loadCSS('/fonts/outfit-v14-latin/style.css');
        });
      }
    </script>

    <!-- Preload key resources but defer non-critical 3rd party scripts -->
    <link rel="preload" href="https://unpkg.com/htmx.org@1.9.10" as="fetch" crossorigin>
    <!-- GSAP and ScrollTrigger loaded conditionally in individual components to avoid window property errors -->
  </head>
  <body>
    <main id="main-content">
      <slot name="nav" />
      <slot name="hero" />
      <slot name="snap-content" />
      <div class="rest-content-wrapper">
        <slot name="rest-content" />
      </div>
    </main>
    
    <slot name="overlay" />

    <script>
      // Ensure HTMX is properly initialized
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof htmx !== 'undefined') {
          // Process any HTMX elements that might not have been processed
          htmx.process(document.body);
        }
      });
    </script>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        const animatedElements = document.querySelectorAll('.animate-on-scroll');

        if (!animatedElements.length) return;

        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1 // Triggers when 10% of the element is visible
        });

        animatedElements.forEach(element => {
          observer.observe(element);
        });
        
        // Load HTMX after main content has loaded for better Core Web Vitals
        if (document.querySelector('[hx-get], [hx-post], [hx-put], [hx-delete]')) {
          const htmxScript = document.createElement('script');
          htmxScript.src = 'https://unpkg.com/htmx.org@1.9.10';
          htmxScript.async = true;
          htmxScript.onload = function() {
            // Ensure HTMX is properly initialized after loading
            if (typeof htmx !== 'undefined') {
              htmx.process(document.body);
            }
          };
          document.head.appendChild(htmxScript);
        }
      });
    </script>
  </body>
</html>