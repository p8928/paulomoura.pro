---

<!-- Desktop Version -->
<div class="responsive-layout desktop-version">
  <Navigation slot="nav" />
  <AboutDesktop_01 slot="hero" />
  <AboutDesktop_02 slot="snap-content" />
  <AboutDesktop_03 slot="snap-content" />
  <AboutDesktop_04 slot="snap-content" />
  <AboutDesktop_05 slot="snap-content" />
  <AboutDesktop_06 slot="snap-content" />
  <AboutDesktop_07 slot="snap-content" />
  <AboutDesktop_08 slot="snap-content" />
  <AboutDesktop_09 slot="snap-content" />
  <Footer slot="rest-content" />
</div>

<!-- Mobile Version -->
<div class="responsive-layout mobile-version">
  <Navigation slot="nav" />
  <AboutMobile_01 slot="hero" />
  <AboutMobile_02 slot="snap-content" />
  <AboutMobile_03 slot="snap-content" />
  <AboutMobile_04 slot="snap-content" />
  <AboutMobile_05 slot="snap-content" />
  <AboutMobile_06 slot="snap-content" />
  <AboutMobile_07 slot="snap-content" />
  <AboutMobile_08 slot="snap-content" />
  <AboutMobile_09 slot="snap-content" />
  <Footer slot="rest-content" />
</div>

<style>
  .responsive-layout.desktop-version {
    display: block;
  }
  
  .responsive-layout.mobile-version {
    display: none;
  }
  
  @media (max-width: 768px) {
    .responsive-layout.desktop-version {
      display: none;
    }
    .responsive-layout.mobile-version {
      display: block;
    }
  }
</style>