---
// src/components/blog/Sidebar.astro
---
<aside class="sidebar">
  <div class="sidebar-widget">
    <h3 class="widget-title">Buscar</h3>
    <div class="search-container">
      <input
        type="text"
        placeholder="Buscar no blog..."
        class="search-input"
        id="search-input-sidebar"
      />
    </div>
  </div>
  <div class="sidebar-widget">
    <h3 class="widget-title">Navegação</h3>
    <ul class="navigation-links">
      <li><a href="/blog">Todos os Posts</a></li>
      <li><a href="/tags/branding">Branding</a></li>
      <li><a href="/tags/seo">SEO</a></li>
      <li><a href="/tags/design">Design</a></li>
    </ul>
  </div>
  <div class="sidebar-widget">
    <h3 class="widget-title">Anúncio</h3>
    <div class="banner-placeholder">
      <span>Banner Spot</span>
    </div>
  </div>
</aside>

<style>
.sidebar {
  width: 100%;
  padding: 1.5rem;
  background-color: var(--color-background);
  border-radius: 8px;
  border: 1px solid var(--color-border);
}

.sidebar-widget {
  margin-bottom: 1.5rem;
}

.widget-title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: var(--color-text-primary);
  border-bottom: 2px solid var(--color-accent);
  padding-bottom: 0.5rem;
}

.search-container {
  position: relative;
}

.search-input {
  width: 100%;
  padding: 0.5rem 0.75rem;
  border: 1px solid var(--color-border);
  border-radius: 4px;
  font-size: 0.85rem;
  background-color: var(--color-background);
  color: var(--color-text-primary);
  transition: border-color 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--color-accent);
  box-shadow: 0 0 0 2px rgba(192, 178, 131, 0.2);
}

.navigation-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.navigation-links li {
  margin-bottom: 0.4rem;
}

.navigation-links a {
  text-decoration: none;
  color: var(--color-text-secondary);
  transition: color 0.2s ease;
  font-size: 0.9rem;
}

.navigation-links a:hover {
  color: var(--color-accent);
}

.banner-placeholder {
  width: 100%;
  height: 200px;
  background-color: #f0f0f0;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 0.9rem;
}
</style>
