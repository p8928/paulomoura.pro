<style>
  footer.new-footer {
    background: var(--color-primary);
    color: var(--color-light-gray);
    padding: var(--space-xl) var(--space-xl) var(--space-xl);
    font-family: var(--font-family-primary);
    border-top: 1px solid var(--color-border);
    margin: 0; /* Ensure no default margin */
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-xl);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-sm);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    flex-shrink: 0; /* Prevent the brand section from shrinking */
  }

  .desktop-links-wrapper {
    display: flex;
    justify-content: flex-end;
    flex: 1;
  }

  .desktop-links {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: var(--space-xl);
  }

  .footer-logo {
    width: 350px;
    height: auto;
    opacity: 0.9;
    transition: opacity var(--transition-normal);
  }

  .footer-logo:hover {
    opacity: 1;
  }

  .footer-description {
    color: var(--color-medium-gray);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    max-width: 320px;
  }

  .footer-social-container {
    grid-column: 4 / 5; /* Place in the 4th column (contato column) */
    justify-self: end; /* Align to the right within the grid cell */
    margin-top: var(--space-lg);
  }

  .footer-social {
    display: flex;
    gap: var(--space-md);
    justify-content: flex-end;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--size-icon-md);
    height: var(--size-icon-md);
    border-radius: var(--radius-full);
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-light-gray);
    transition: all var(--transition-normal);
  }

  .social-link:hover {
    background: var(--color-accent);
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .footer-heading {
    color: var(--color-white);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-lg);
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
  }

  .footer-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links-list li {
    margin-bottom: var(--space-sm);
  }

  .footer-link {
    color: var(--color-light-gray);
    font-size: var(--font-size-sm);
    transition: color var(--transition-normal);
    text-decoration: none;
    position: relative;
    display: inline-block;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: var(--color-accent);
    transition: width var(--transition-normal);
  }

  .footer-link:hover {
    color: var(--color-accent-accessible);
  }

  .footer-link:hover::after {
    width: 100%;
  }

  .footer-contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-light-gray);
    font-size: var(--font-size-sm);
  }

  /* Mobile Accordion Styles */
  .mobile-accordion {
    display: none;
    width: 100%;
  }

  .accordion-item {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-sm);
    overflow: hidden;
  }

  .accordion-header {
    width: 100%;
    background: transparent;
    border: none;
    color: var(--color-white);
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    padding: var(--space-md);
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s var(--transition-normal);
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
  }

  .accordion-header:hover {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-accent);
  }

  .accordion-header.active {
    color: var(--color-accent);
    background: rgba(255, 255, 255, 0.05);
  }

  .accordion-title {
    text-align: left;
    margin-right: var(--space-md);
  }

  .accordion-icon {
    transition: transform 0.3s var(--transition-normal);
    flex-shrink: 0;
  }

  .accordion-icon.active {
    transform: rotate(180deg);
  }

  .accordion-panel {
    padding: 0 var(--space-md);
    height: 0;
    opacity: 0;
    overflow: hidden;
    transition: height 0.4s ease-out, opacity 0.4s ease-out, padding 0.4s ease-out;
  }

  .accordion-panel.active {
    opacity: 1;
    padding: var(--space-sm) var(--space-md) var(--space-md);
    height: auto;
  }

  

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-xl);
    margin-bottom: 0; /* Ensure no bottom margin */
  }

  .footer-legal p {
    color: var(--color-medium-gray);
    font-size: var(--font-size-xs);
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--space-xl);
  }

  .footer-bottom-link {
    color: var(--color-medium-gray);
    font-size: var(--font-size-xs);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .footer-bottom-link:hover {
    color: var(--color-accent-accessible);
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      gap: var(--space-3xl);
    }
    
    .desktop-links-wrapper {
      justify-content: center;
      width: 100%;
    }
    
    .desktop-links {
      grid-template-columns: 1fr 1fr;
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      gap: var(--space-3xl);
    }
    
    .footer-brand {
      align-items: center;
    }
    
    .desktop-links-wrapper {
      justify-content: center;
      width: 100%;
    }
    
    .desktop-links {
      grid-template-columns: 1fr;
      width: 100%;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: var(--space-lg);
      align-items: flex-start;
    }
    
    .footer-bottom-links {
      width: 100%;
      justify-content: space-between;
    }
  }

  @media (max-width: 480px) {
    .desktop-links-wrapper {
      display: none;
    }
    
    .mobile-accordion {
      display: block;
      width: 100%;
    }
    
    .footer-content {
      flex-direction: column;
      align-items: center;
    }
    
    .footer-brand {
      align-items: center;
    }
    
    .footer-bottom-links {
      flex-direction: column;
      gap: var(--space-sm);
      align-items: flex-start;
    }

  .footer-description {
    max-width: 80px;
  }

    .footer-logo {
      width: 100px;
    }
    
    .new-footer {
      padding: var(--space-4xl) var(--space-md) var(--space-lg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Mobile accordion functionality
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    accordionHeaders.forEach(header => {
      header.addEventListener('click', (e) => {
        e.preventDefault();
        
        const targetPanelId = header.getAttribute('aria-controls');
        const targetPanel = document.getElementById(targetPanelId);
        const targetIcon = header.querySelector('.accordion-icon');
        
        // Toggle active state for clicked accordion
        header.classList.toggle('active');
        targetPanel.classList.toggle('active');
        targetIcon.classList.toggle('active');
        
        // Update aria-expanded attribute
        const isExpanded = header.classList.contains('active');
        header.setAttribute('aria-expanded', isExpanded.toString());
        
        // Close other accordion items if needed
        accordionHeaders.forEach(otherHeader => {
          if (otherHeader !== header) {
            const otherPanelId = otherHeader.getAttribute('aria-controls');
            const otherPanel = document.getElementById(otherPanelId);
            const otherIcon = otherHeader.querySelector('.accordion-icon');
            
            otherHeader.classList.remove('active');
            otherPanel.classList.remove('active');
            otherIcon.classList.remove('active');
            otherHeader.setAttribute('aria-expanded', 'false');
          }
        });
      });
    });
  });
</script>
