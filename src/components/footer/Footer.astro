<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Mobile accordion functionality
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    accordionHeaders.forEach(header => {
      header.addEventListener('click', (e) => {
        e.preventDefault();
        
        const targetPanelId = header.getAttribute('aria-controls');
        const targetPanel = document.getElementById(targetPanelId);
        const targetIcon = header.querySelector('.accordion-icon');
        
        // Toggle active state for clicked accordion
        header.classList.toggle('active');
        targetPanel.classList.toggle('active');
        targetIcon.classList.toggle('active');
        
        // Update aria-expanded attribute
        const isExpanded = header.classList.contains('active');
        header.setAttribute('aria-expanded', isExpanded.toString());
        
        // Close other accordion items if needed
        accordionHeaders.forEach(otherHeader => {
          if (otherHeader !== header) {
            const otherPanelId = otherHeader.getAttribute('aria-controls');
            const otherPanel = document.getElementById(otherPanelId);
            const otherIcon = otherHeader.querySelector('.accordion-icon');
            
            otherHeader.classList.remove('active');
            otherPanel.classList.remove('active');
            otherIcon.classList.remove('active');
            otherHeader.setAttribute('aria-expanded', 'false');
          }
        });
      });
    });
    
    // Initialize mobile language selector in footer
    const mobileFooterLanguageBtn = document.getElementById('mobileFooterLanguageBtn');
    const mobileFooterLanguageDropdown = document.getElementById('mobileFooterLanguageDropdown');
    const mobileFooterCurrentLanguage = document.getElementById('mobileFooterCurrentLanguage');
    const mobileFooterLanguageOptions = document.querySelectorAll('#mobileFooterLanguageDropdown .hero__language-option');
    
    if (mobileFooterLanguageBtn && mobileFooterLanguageDropdown && mobileFooterCurrentLanguage) {
      mobileFooterLanguageBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        mobileFooterLanguageDropdown.classList.toggle('show');
      });
      
      // Close mobile language dropdown when clicking outside
      document.addEventListener('click', function(e) {
        if (!mobileFooterLanguageBtn.contains(e.target) && !mobileFooterLanguageDropdown.contains(e.target)) {
          mobileFooterLanguageDropdown.classList.remove('show');
        }
      });
      
      // Close mobile language dropdown on ESC key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && mobileFooterLanguageDropdown.classList.contains('show')) {
          mobileFooterLanguageDropdown.classList.remove('show');
        }
      });
      
      // Handle mobile language selection
      mobileFooterLanguageOptions.forEach(option => {
        option.addEventListener('click', function(e) {
          e.preventDefault();
          const lang = this.getAttribute('data-lang');
          const text = this.getAttribute('data-text');
          
          // Update current language display
          mobileFooterCurrentLanguage.textContent = text;
          
          // Update active state
          mobileFooterLanguageOptions.forEach(opt => {
            opt.classList.toggle('active', opt.getAttribute('data-lang') === lang);
          });
          
          // Also update main language selector if it exists
          const mainLanguageSelector = document.getElementById('currentLanguage');
          if (mainLanguageSelector) {
            mainLanguageSelector.textContent = text;
          }
          
          // Also update main language options if they exist
          const mainLanguageOptions = document.querySelectorAll('.hero__language-option');
          mainLanguageOptions.forEach(opt => {
            if (opt.getAttribute('data-lang') === lang) {
              opt.classList.add('active');
            } else {
              opt.classList.remove('active');
            }
          });
          
          // Save to localStorage
          localStorage.setItem('selectedLanguage', lang);
          localStorage.setItem('userLanguage', lang);
          
          mobileFooterLanguageDropdown.classList.remove('show');
        });
      });
    }
  });
</script>
