<style>
  /* Menu Overlay Base Styles */
  .menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    z-index: 1000;
    color: #FFFFFF;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    /* Improved transition with better easing */
    transition: opacity 0.4s ease, visibility 0.4s ease;
  }

  /* Active state for menu overlay */
  .menu-overlay.is-active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  /* Container for menu content */
  .menu-overlay__container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 4rem 2rem;
    box-sizing: border-box;
  }

  /* Social media links at the top left (desktop) */
  .menu-overlay__social--desktop {
    position: absolute;
    top: 2rem;
    left: 2rem;
    z-index: 1001;
    display: flex;
    gap: 1.5rem;
    opacity: 1;
  }

  /* Hide mobile social icons on desktop by default */
  .menu-overlay__social--mobile {
    display: none;
  }

  /* Social media link styles */
  .menu-overlay__social-link {
    color: #FFFFFF;
    transition: all 0.3s ease;
    opacity: 0.7;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .menu-overlay__social-link:hover {
    color: #B41B4D;
    opacity: 1;
    transform: translateY(-5px);
  }

  /* Close button styles */
  .menu-overlay__close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    width: 50px;
    height: 50px;
    z-index: 1001;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .menu-overlay__close:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: rotate(90deg);
  }

  .menu-overlay__close-icon {
    width: 24px;
    height: 24px;
    color: #FFFFFF;
    transition: color 0.3s ease;
