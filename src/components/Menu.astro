    .menu-overlay.is-active .menu-overlay__item:nth-child(5) { transition-delay: 0.5s; }
    .menu-overlay.is-active .menu-overlay__item:nth-child(6) { transition-delay: 0.6s; }
    
    .menu-overlay.is-active .menu-overlay__footer {
      transition-delay: 0.7s;
    }
  }

  /* Small mobile adjustments */
  @media (max-width: 480px) {
    .menu-overlay__container {
      padding: 3rem 1.5rem;
    }
    
    .menu-overlay__link {
      font-size: clamp(1.1rem, 5vw, 1.8rem);
