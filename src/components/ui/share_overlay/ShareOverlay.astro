---
import './css/share_overlay.css';

const { post, url } = Astro.props;
---

<div id="shareOverlay" class="share-overlay">
  <button id="closeShareBtn" class="close-btn">&times;</button>
  <div class="share-options">
    <a href={`https://api.whatsapp.com/send?text=${encodeURIComponent(post.data.title)}%20${url}`} target="_blank" rel="noopener noreferrer" aria-label="Compartilhar no WhatsApp">
      <img src="/img/icons/whatsapp-circle.svg" alt="WhatsApp" />
      <span class="tooltip">WhatsApp</span>
    </a>
    <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${encodeURIComponent(post.data.title)}`} target="_blank" rel="noopener noreferrer" aria-label="Compartilhar no LinkedIn">
      <img src="/img/icons/linkedin-circle.svg" alt="LinkedIn" />
      <span class="tooltip">LinkedIn</span>
    </a>
    <a href={`https://twitter.com/intent/tweet?url=${url}&text=${encodeURIComponent(post.data.title)}`} target="_blank" rel="noopener noreferrer" aria-label="Compartilhar no Twitter">
      <img src="/img/icons/twitter-alt-circle.svg" alt="Twitter" />
      <span class="tooltip">Twitter</span>
    </a>
    <a href={`https://www.facebook.com/sharer/sharer.php?u=${url}`} target="_blank" rel="noopener noreferrer" aria-label="Compartilhar no Facebook">
      <img src="/img/icons/facebook.svg" alt="Facebook" />
      <span class="tooltip">Facebook</span>
    </a>
    <a href={`mailto:?subject=${encodeURIComponent(post.data.title)}&body=${url}`} aria-label="Compartilhar por Email">
      <img src="/img/icons/circle-envelope.svg" alt="Email" />
      <span class="tooltip">Email</span>
    </a>
  </div>
</div>
