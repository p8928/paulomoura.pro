---
import './css/overlay_menu.css';
---

<div class="menu-overlay" id="menuOverlay">
  <div class="menu-overlay__container">
    <!-- Social media links at the top left (desktop) -->
    <div class="menu-overlay__social menu-overlay__social--desktop">
      <a href="#" class="menu-overlay__social-link" aria-label="Substack">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M15 3.604H1v1.891h14v-1.89ZM1 7.208V16l7-3.926L15 16V7.208zM15 0H1v1.89h14z"/>
        </svg>
      </a>
      <a href="#" class="menu-overlay__social-link" aria-label="LinkedIn">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
        </svg>
      </a>
    </div>

    <!-- Logo white for mobile overlay -->
    <div class="menu-overlay__logo-mobile">
      <img src="/img/m_white.png" alt="Logo Moura">
    </div>

    <!-- Close button at the top right -->
    <button class="menu-overlay__close" id="closeMenu" aria-label="Fechar menu">
      <span class="menu-overlay__close-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </span>
    </button>

    <!-- Main navigation -->
    <nav class="menu-overlay__nav menu-overlay__nav--main" id="mainMenu">
      <ul class="menu-overlay__list">
        <li class="menu-overlay__item" id="servicos-menu-item">
          <a href="#" class="menu-overlay__link" id="servicosLink" data-preview="servicos">
            SERVIÇOS
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/brand-led" class="menu-overlay__link" data-preview="brand-led">
            BRAND-LED
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/growth" class="menu-overlay__link" data-preview="growth">
            GROWTH
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/blog" class="menu-overlay__link" data-preview="blog">
            BLOG
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/contato" class="menu-overlay__link" data-preview="contato">
            CONTATO
          </a>
        </li>
      </ul>
    </nav>

    <!-- Services navigation (hidden by default) -->
    <nav class="menu-overlay__nav menu-overlay__nav--services" id="servicesMenu">
      <ul class="menu-overlay__list">
        <li class="menu-overlay__item">
          <a href="#" class="menu-overlay__link menu-overlay__link--back" id="backToMenu">
            ← VOLTAR
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/branding-digital" class="menu-overlay__link" data-preview="branding-digital">
            BRANDING DIGITAL
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/desenvolvimento-web" class="menu-overlay__link" data-preview="desenvolvimento-web">
            DESENVOLVIMENTO WEB
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/brand-led-seo" class="menu-overlay__link" data-preview="brand-led-seo">
            BRAND-LED SEO
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/growth-strategy" class="menu-overlay__link" data-preview="growth-strategy">
            GROWTH STRATEGY
          </a>
        </li>
        <li class="menu-overlay__item">
          <a href="/consultoria" class="menu-overlay__link" data-preview="consultoria">
            CONSULTORIA
          </a>
        </li>
      </ul>
    </nav>

    <!-- Preview area for desktop hover effects (image only) -->
    <div class="menu-overlay__preview" id="menuPreview">
      <div class="menu-overlay__preview-wrapper">
        <img src="/img/m_rose_promo.png" alt="Preview" class="menu-overlay__preview-image" id="previewImage">
      </div>
    </div>

    <!-- Social media links at the bottom (mobile) -->
    <div class="menu-overlay__footer">
      <div class="menu-overlay__social menu-overlay__social--mobile">
        <a href="#" class="menu-overlay__social-link" aria-label="Substack">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path d="M15 3.604H1v1.891h14v-1.89ZM1 7.208V16l7-3.926L15 16V7.208zM15 0H1v1.89h14z"/>
          </svg>
        </a>
        <a href="#" class="menu-overlay__social-link" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Wait for elements to be available
    const init = () => {
      const openMenuBtn = document.getElementById('openMenu');
      const menuOverlay = document.getElementById('menuOverlay');
      const closeMenuBtn = document.getElementById('closeMenu');
      const servicosLink = document.getElementById('servicosLink');
      const backToMenu = document.getElementById('backToMenu');
      const mainMenu = document.getElementById('mainMenu');
      const servicesMenu = document.getElementById('servicesMenu');
      const menuLinks = document.querySelectorAll('.menu-overlay__link[data-preview]');
      const previewImage = document.getElementById('previewImage');

      // Check if all required elements exist
      if (!openMenuBtn || !menuOverlay || !closeMenuBtn) {
        // Retry after a short delay
        setTimeout(init, 100);
        return;
      }

      // Preview image paths
      const previewImages = {
        'servicos': '/img/menu_overlay/serviços.png',
        'brand-led': '/img/menu_overlay/brand-led.png',
        'growth': '/img/menu_overlay/growth.png',
        'blog': '/img/menu_overlay/blog.png',
        'contato': '/img/menu_overlay/contato.png',
        'branding-digital': '/img/menu_overlay/digital_branding.png',
        'desenvolvimento-web': '/img/menu_overlay/web_dev.png',
        'brand-led-seo': '/img/menu_overlay/brand-led_seo.png',
        'growth-strategy': '/img/menu_overlay/growth_strategy.png',
        'consultoria': '/img/menu_overlay/consultoria.png'
      };

      // Open menu function
      const openMenu = () => {
        menuOverlay.classList.add('is-active');
        document.body.style.overflow = 'hidden';
        
        // Reset menu states when opening
        if (mainMenu) mainMenu.classList.remove('menu-overlay__nav--hidden');
        if (servicesMenu) servicesMenu.classList.remove('menu-overlay__nav--active');
      };

      // Close menu function
      const closeMenu = () => {
        menuOverlay.classList.remove('is-active');
        document.body.style.overflow = '';
        
        // Reset menu states when closing
        if (mainMenu) mainMenu.classList.remove('menu-overlay__nav--hidden');
        if (servicesMenu) servicesMenu.classList.remove('menu-overlay__nav--active');
      };

      // Show services menu
      const showServicesMenu = () => {
        if (mainMenu) mainMenu.classList.add('menu-overlay__nav--hidden');
        if (servicesMenu) servicesMenu.classList.add('menu-overlay__nav--active');
      };

      // Show main menu
      const showMainMenu = () => {
        if (servicesMenu) servicesMenu.classList.remove('menu-overlay__nav--active');
        if (mainMenu) mainMenu.classList.remove('menu-overlay__nav--hidden');
      };

      // Update preview image with subtle transition
      const updatePreviewImage = (previewKey) => {
        if (previewImages[previewKey] && previewImage) {
          // Add transition class
          previewImage.classList.add('changing');
          
          // Change image after a short delay for smooth transition
          setTimeout(() => {
            previewImage.src = previewImages[previewKey];
            
            // Remove transition class after image loads
            previewImage.onload = () => {
              previewImage.classList.remove('changing');
            };
            
            // Fallback in case image is already loaded
            if (previewImage.complete) {
              previewImage.classList.remove('changing');
            }
          }, 50);
        }
      };

      // Event listeners
      openMenuBtn.addEventListener('click', (e) => {
        e.preventDefault();
        openMenu();
      });

      closeMenuBtn.addEventListener('click', (e) => {
        e.preventDefault();
        closeMenu();
      });
      
      // Close menu with Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && menuOverlay.classList.contains('is-active')) {
          closeMenu();
        }
      });

      // Close menu when clicking outside content
      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) {
          closeMenu();
        }
      });

      // Navigate to services menu
      if (servicosLink) {
        servicosLink.addEventListener('click', (e) => {
          e.preventDefault();
          showServicesMenu();
        });
      }

      // Navigate back to main menu
      if (backToMenu) {
        backToMenu.addEventListener('click', (e) => {
          e.preventDefault();
          showMainMenu();
        });
      }

      // Add hover events for preview (desktop only)
      menuLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
          const previewKey = link.getAttribute('data-preview');
          updatePreviewImage(previewKey);
        });
      });

      // Make preview container clickable
      const previewContainer = document.querySelector('.menu-overlay__preview');
      if (previewContainer) {
        previewContainer.addEventListener('click', () => {
          // Find the currently active menu link and trigger its click
          const activeLink = document.querySelector('.menu-overlay__link:hover');
          if (activeLink) {
            activeLink.click();
          }
        });
      }
    };

    // Initialize
    init();
  });
</script>