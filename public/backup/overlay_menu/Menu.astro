---
import './css/overlay_menu.css';
---

<style>
  /* Animation containers and elements for menu overlay */
  .menu-overlay__preview-animation-container {
    width: 400px; /* Larger size to match original image dimensions */
    height: 300px; /* Larger size to match original image dimensions */
    margin: 16% auto;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Serviços Animation - centered and larger */
  .menu-services-grid {
    width: 160px;
    height: 160px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .menu-service-box {
    width: 36px;
    height: 36px;
    border: 4px solid var(--color-accent-accessible);
    border-radius: 6px;
    opacity: 0;
    transform: scale(0);
    animation: menu-serviceBoxAppear 2s ease-in-out infinite;
  }

  .menu-service-box:nth-child(1) { animation-delay: 0s; }
  .menu-service-box:nth-child(2) { animation-delay: 0.2s; }
  .menu-service-box:nth-child(3) { animation-delay: 0.4s; }
  .menu-service-box:nth-child(4) { animation-delay: 0.6s; }
  .menu-service-box:nth-child(5) { animation-delay: 0.8s; }
  .menu-service-box:nth-child(6) { animation-delay: 1s; }
  .menu-service-box:nth-child(7) { animation-delay: 1.2s; }
  .menu-service-box:nth-child(8) { animation-delay: 1.4s; }
  .menu-service-box:nth-child(9) { animation-delay: 1.6s; }

  @keyframes menu-serviceBoxAppear {
    0%, 20% { opacity: 0; transform: scale(0); }
    40%, 60% { opacity: 1; transform: scale(1); }
    80%, 100% { opacity: 0.3; transform: scale(1); }
  }

  /* Brand-Led Strategy Animation - centered and larger */
  .menu-brand-compass {
    width: 140px;
    height: 160px;
    position: relative;
  }

  .menu-compass-circle {
    width: 140px;
    height: 140px;
    border: 4px solid var(--color-accent-accessible);
    border-radius: 50%;
    position: relative;
    animation: menu-compassFloat 3s ease-in-out infinite;
  }

  .menu-compass-needle {
    position: absolute;
    top: 25px;
    left: 66px;
    width: 6px;
    height: 90px;
    background: linear-gradient(to bottom, var(--color-accent-accessible), transparent);
    transform-origin: bottom center;
    animation: menu-compassRotate 4s ease-in-out infinite;
  }

  .menu-compass-points {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
  }

  .menu-compass-point {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--color-accent-accessible);
    border-radius: 50%;
  }

  .menu-compass-point:nth-child(1) { top: 0; left: 50%; transform: translateX(-50%); }
  .menu-compass-point:nth-child(2) { right: 0; top: 50%; transform: translateY(-50%); }
  .menu-compass-point:nth-child(3) { bottom: 0; left: 50%; transform: translateX(-50%); }
  .menu-compass-point:nth-child(4) { left: 0; top: 50%; transform: translateY(-50%); }

  @keyframes menu-compassFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-3px) rotate(2deg); }
  }

  @keyframes menu-compassRotate {
    0% { transform: rotate(0deg); }
    25% { transform: rotate(15deg); }
    75% { transform: rotate(-15deg); }
    100% { transform: rotate(0deg); }
  }

  /* Growth Animation - centered and larger */
  .menu-growth-chart {
    width: 220px;
    height: 130px;
    position: relative;
  }

  .menu-growth-bar {
    position: absolute;
    bottom: 0;
    width: 18px;
    background: var(--color-accent-accessible);
    border-radius: 9px 9px 0 0;
    transform-origin: bottom center;
    animation: menu-growthBars 2.5s ease-in-out infinite;
  }

  .menu-growth-bar:nth-child(1) { left: 20px; height: 35px; animation-delay: 0s; }
  .menu-growth-bar:nth-child(2) { left: 55px; height: 65px; animation-delay: 0.2s; }
  .menu-growth-bar:nth-child(3) { left: 90px; height: 95px; animation-delay: 0.4s; }
  .menu-growth-bar:nth-child(4) { left: 125px; height: 120px; animation-delay: 0.6s; }
  .menu-growth-bar:nth-child(5) { left: 160px; height: 95px; animation-delay: 0.8s; }

  .menu-growth-trend {
    position: absolute;
    top: 25px;
    left: 25px;
    width: 150px;
    height: 4px;
    background: linear-gradient(to right, transparent, var(--color-accent-accessible), var(--color-accent-accessible));
    transform: rotate(15deg);
    transform-origin: left center;
    animation: menu-trendLine 3s ease-in-out infinite;
  }

  @keyframes menu-growthBars {
    0%, 30% { transform: scaleY(0); }
    60%, 80% { transform: scaleY(1); }
    100% { transform: scaleY(0.7); }
  }

  @keyframes menu-trendLine {
    0%, 40% { opacity: 0; transform: rotate(15deg) scaleX(0); }
    70%, 90% { opacity: 1; transform: rotate(15deg) scaleX(1); }
    100% { opacity: 0.5; transform: rotate(15deg) scaleX(1); }
  }

  /* Blog Animation - centered and larger */
  .menu-blog-document {
    width: 180px;
    height: 220px;
    position: relative;
  }

  .menu-blog-page {
    width: 180px;
    height: 190px;
    border: 4px solid var(--color-accent-accessible);
    border-radius: 8px;
    position: relative;
    background: transparent;
    animation: menu-blogFloat 3s ease-in-out infinite;
  }

  .menu-blog-line {
    position: absolute;
    left: 20px;
    right: 20px;
    height: 4px;
    background: var(--color-accent-accessible);
    opacity: 0;
    transform: scaleX(0);
    transform-origin: left center;
    animation: menu-blogWrite 2s ease-in-out infinite;
  }

  .menu-blog-line:nth-child(1) { top: 40px; animation-delay: 0s; }
  .menu-blog-line:nth-child(2) { top: 70px; animation-delay: 0.3s; }
  .menu-blog-line:nth-child(3) { top: 100px; animation-delay: 0.6s; width: 70%; }
  .menu-blog-line:nth-child(4) { top: 140px; animation-delay: 0.9s; }
  .menu-blog-line:nth-child(5) { top: 170px; animation-delay: 1.2s; width: 80%; }

  .menu-blog-cursor {
    position: absolute;
    top: 170px;
    right: 50px;
    width: 4px;
    height: 16px;
    background: var(--color-accent-accessible);
    animation: menu-blogCursorBlink 1s ease-in-out infinite;
  }

  @keyframes menu-blogFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-2px); }
  }

  @keyframes menu-blogWrite {
    0%, 20% { opacity: 0; transform: scaleX(0); }
    50%, 70% { opacity: 1; transform: scaleX(1); }
    90%, 100% { opacity: 0.4; transform: scaleX(1); }
  }

  @keyframes menu-blogCursorBlink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Contato Animation - centered and larger */
  .menu-contact-envelope {
    width: 190px;
    height: 130px;
    position: relative;
  }

  .menu-envelope-body {
    width: 190px;
    height: 110px;
    border: 4px solid var(--color-accent-accessible);
    border-radius: 8px;
    position: relative;
    animation: menu-envelopeFloat 3s ease-in-out infinite;
  }

  .menu-envelope-flap {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    height: 0;
    border-left: 98px solid transparent;
    border-right: 98px solid transparent;
    border-top: 70px solid var(--color-accent-accessible);
    transform-origin: bottom center;
    opacity: 50%;
    animation: menu-envelopeOpen 2s ease-in-out infinite;
  }

  .menu-message-dots {
    position: absolute;
    top: 25px;
    left: 25px;
    right: 25px;
    bottom: 25px;
    z-index: 10;
  }

  .menu-message-dot {
    width: 14px;
    height: 14px;
    background: var(--color-accent-accessible);
    border-radius: 50%;
    position: absolute;
    opacity: 0;
    animation: menu-messageDots 2s ease-in-out infinite;
  }

  .menu-message-dot:nth-child(1) { left: 15px; top: 15px; animation-delay: 0.5s; }
  .menu-message-dot:nth-child(2) { left: 45px; top: 15px; animation-delay: 0.7s; }
  .menu-message-dot:nth-child(3) { left: 75px; top: 15px; animation-delay: 0.9s; }

  @keyframes menu-envelopeFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  @keyframes menu-envelopeOpen {
    0%, 30% { transform: rotateX(0deg); }
    50%, 70% { transform: rotateX(-20deg); }
    90%, 100% { transform: rotateX(0deg); }
  }

  @keyframes menu-messageDots {
    0%, 40% { opacity: 0; transform: scale(0); }
    60%, 80% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(0); }
  }

  /* Branding Digital Animation - centered and larger */
  .menu-fingerprint {
    width: 160px;
    height: 200px;
    position: relative;
  }

  .menu-fingerprint-line {
    position: absolute;
    left: 0;
    width: 160px;
    height: 4px;
    background: var(--color-accent-accessible);
    border-radius: 2px;
    opacity: 0;
    animation: menu-fingerprintScan 3s ease-in-out infinite;
  }

  .menu-fingerprint-line:nth-child(1) { top: 15px; width: 90px; left: 30px; animation-delay: 0s; }
  .menu-fingerprint-line:nth-child(2) { top: 35px; width: 135px; left: 8px; animation-delay: 0.1s; }
  .menu-fingerprint-line:nth-child(3) { top: 55px; width: 160px; left: 0px; animation-delay: 0.2s; }
  .menu-fingerprint-line:nth-child(4) { top: 75px; width: 150px; left: 5px; animation-delay: 0.3s; }
  .menu-fingerprint-line:nth-child(5) { top: 95px; width: 135px; left: 8px; animation-delay: 0.4s; }
  .menu-fingerprint-line:nth-child(6) { top: 115px; width: 120px; left: 12px; animation-delay: 0.5s; }
  .menu-fingerprint-line:nth-child(7) { top: 135px; width: 105px; left: 18px; animation-delay: 0.6s; }
  .menu-fingerprint-line:nth-child(8) { top: 155px; width: 90px; left: 27px; animation-delay: 0.7s; }
  .menu-fingerprint-line:nth-child(9) { top: 175px; width: 70px; left: 38px; animation-delay: 0.8s; }

  .menu-branding-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 180px;
    height: 240px;
    border: 3px solid var(--color-accent-accessible);
    border-radius: 90px;
    margin-bottom: 20%;
    animation: menu-brandingGlow 3s ease-in-out infinite;
  }

  @keyframes menu-fingerprintScan {
    0%, 20% { opacity: 0; transform: translateX(-30px); }
    40%, 60% { opacity: 1; transform: translateX(0); }
    80%, 100% { opacity: 0.3; transform: translateX(15px); }
  }



  /* Web Development Animation - centered and larger */
  .menu-web-brackets {
    width: 220px;
    height: 140px;
    position: relative;
    margin-bottom: 10%;
  }

  .menu-bracket-left, .menu-bracket-right {
    position: absolute;
    top: 0;
    width: 40px;
    height: 140px;
  }

  .menu-bracket-left {
    left: 0;
    border-left: 4px solid var(--color-accent-accessible);
    border-top: 4px solid var(--color-accent-accessible);
    border-bottom: 4px solid var(--color-accent-accessible);
    animation: menu-webSlideIn 2s ease-in-out infinite alternate;
  }

  .menu-bracket-right {
    right: 0;
    border-right: 4px solid var(--color-accent-accessible);
    border-top: 4px solid var(--color-accent-accessible);
    border-bottom: 4px solid var(--color-accent-accessible);
    animation: menu-webSlideIn 2s ease-in-out infinite alternate-reverse;
  }

  .menu-web-cursor {
    position: absolute;
    top: 100px;
    left: 110px;
    width: 4px;
    height: 40px;
    background: var(--color-accent-accessible);
    animation: menu-webBlink 1s ease-in-out infinite;
  }

  @keyframes menu-webSlideIn {
    0% { transform: translateX(20px); opacity: 0.5; }
    100% { transform: translateX(0); opacity: 1; }
  }

  @keyframes menu-webBlink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* SEO Animation - centered and larger */
  .menu-seo-container {
    width: 240px;
    height: 140px;
    position: relative;
  }

  .menu-seo-lines {
    position: absolute;
    top: 0;
    left: 50px;
    right: 50px;
  }

  .menu-seo-line {
    width: 100%;
    height: 4px;
    background: var(--color-accent-accessible);
    margin-bottom: 20px;
    opacity: 0;
    transform: scaleX(0);
    transform-origin: left center;
    animation: menu-seoLinesGrow 2.5s ease-in-out infinite;
  }

  .menu-seo-line:nth-child(1) { 
    animation-delay: 0s; 
    width: 80%;
  }
  .menu-seo-line:nth-child(2) { 
    animation-delay: 0.3s; 
    width: 95%;
  }
  .menu-seo-line:nth-child(3) { 
    animation-delay: 0.6s; 
    width: 70%;
  }
  .menu-seo-line:nth-child(4) { 
    animation-delay: 0.9s; 
    width: 85%;
  }
  .menu-seo-line:nth-child(5) { 
    animation-delay: 1.2s; 
    width: 60%;
  }

  .menu-seo-highlight {
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 120px;
    background: linear-gradient(to bottom, transparent, var(--color-accent-accessible), transparent);
    animation: menu-seoScan 3s ease-in-out infinite;
  }

  @keyframes menu-seoLinesGrow {
    0%, 20% { 
      opacity: 0; 
      transform: scaleX(0); 
    }
    40%, 70% { 
      opacity: 1; 
      transform: scaleX(1); 
    }
    90%, 100% { 
      opacity: 0.3; 
      transform: scaleX(1); 
    }
  }

  @keyframes menu-seoScan {
    0% { transform: translateX(0); opacity: 0; }
    20%, 80% { opacity: 1; }
    100% { transform: translateX(240px); opacity: 0; }
  }

  /* Growth Strategy Animation - centered and larger */
  .menu-growth-arrow {
    width: 180px;
    height: 140px;
    position: relative;
    margin-bottom: 20%;
  }

  .menu-growth-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 6px;
    height: 90px;
    background: var(--color-accent-accessible);
    transform-origin: bottom center;
    animation: menu-growthRise 2s ease-in-out infinite;
  }

  .menu-growth-head {
    position: absolute;
    top: 15px;
    left: -15px;
    width: 0;
    height: 0;
    border-left: 18px solid transparent;
    border-right: 18px solid transparent;
    border-bottom: 30px solid var(--color-accent-accessible);
    animation: menu-growthRise 2s ease-in-out infinite;
  }

  .menu-growth-dots {
    position: absolute;
    bottom: 20px;
    right: 20px;
  }

  .menu-growth-dot {
    width: 8px;
    height: 8px;
    background: var(--color-accent-accessible);
    border-radius: 50%;
    margin-bottom: 16px;
    opacity: 0;
    animation: menu-growthDots 2s ease-in-out infinite;
  }

  .menu-growth-dot:nth-child(1) { animation-delay: 0.2s; }
  .menu-growth-dot:nth-child(2) { animation-delay: 0.4s; }
  .menu-growth-dot:nth-child(3) { animation-delay: 0.6s; }

  @keyframes menu-growthRise {
    0% { transform: translateY(20px) scale(0.8); }
    50% { transform: translateY(-5px) scale(1.1); }
    100% { transform: translateY(20px) scale(0.8); }
  }

  @keyframes menu-growthDots {
    0%, 20% { opacity: 0; transform: scale(0); }
    40%, 60% { opacity: 1; transform: scale(1); }
    80%, 100% { opacity: 0; transform: scale(0); }
  }

  /* Trust Advertisement Animation - centered and larger */
  .menu-trust-shield {
    width: 160px;
    height: 180px;
    position: relative;
    margin-bottom: 20%;
  }

  .menu-trust-body {
    width: 160px;
    height: 120px;
    border: 4px solid var(--color-accent-accessible);
    border-radius: 80px 80px 0 0;
    position: relative;
    animation: menu-trustGlow 3s ease-in-out infinite;
  }

  .menu-trust-bottom {
    width: 0;
    height: 0;
    border-left: 80px solid transparent;
    border-right: 80px solid transparent;
    border-top: 60px solid var(--color-accent-accessible);
    position: absolute;
    bottom: -55px;
    left: 0;
    animation: menu-trustGlow 3s ease-in-out infinite;
  }

  .menu-trust-check {
    position: absolute;
    top: 35px;
    left: 45px;
    width: 18px;
    height: 35px;
    border-right: 4px solid var(--color-accent-accessible);
    border-bottom: 4px solid var(--color-accent-accessible);
    transform: rotate(45deg);
    opacity: 0;
    animation: menu-trustCheck 2s ease-in-out infinite;
  }

  .menu-trust-sparkle {
    position: absolute;
    width: 14px;
    height: 14px;
    background: var(--color-accent-accessible);
    border-radius: 50%;
    opacity: 0;
    animation: menu-trustSparkle 2s ease-in-out infinite;
  }

  .menu-trust-sparkle:nth-child(1) { top: 30px; right: 30px; animation-delay: 0.5s; }
  .menu-trust-sparkle:nth-child(2) { bottom: 60px; right: 45px; animation-delay: 1s; }
  .menu-trust-sparkle:nth-child(3) { top: 75px; right: 15px; animation-delay: 1.5s; }

  @keyframes menu-trustGlow {
    0%, 100% { filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.3)); }
    50% { filter: drop-shadow(0 0 45px rgba(255, 255, 255, 0.6)); }
  }

  @keyframes menu-trustCheck {
    0%, 40% { opacity: 0; transform: rotate(45deg) scale(0); }
    60%, 80% { opacity: 1; transform: rotate(45deg) scale(1); }
    100% { opacity: 0; transform: rotate(45deg) scale(0); }
  }

  @keyframes menu-trustSparkle {
    0%, 70% { opacity: 0; transform: scale(0); }
    85% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(0); }
  }
  
  .hidden {
    display: none !important;
  }
  
  .menu-overlay__preview-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }
  
  .menu-logo-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0.8;
  }
</style>

